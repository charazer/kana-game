{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "types": ["vitest/globals", "vite/client", "node", "@playwright/test"]
  },
  "include": ["src", "e2e", "*.config.ts"]
}
