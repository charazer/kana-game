{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        "schedule:weekly",
        "schedule:automergeWeekly"
    ],
    "packageRules": [
        {
            "matchUpdateTypes": [
                "major"
            ],
            "automerge": false
        },
        {
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "matchCurrentVersion": "!/^0/",
            "automerge": true
        },
        {
            "matchPackageNames": [
                "happy-dom"
            ],
            "matchUpdateTypes": [
                "patch"
            ],
            "enabled": false
        }
    ]
}